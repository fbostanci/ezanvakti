#!/bin/bash
#
#                           Ezanvakti Basit Arayüz  Bileşeni 1.3
#
#

. @libdir@/@AD@/temel_islevler.bash
. @libdir@/@AD@/arayuz_temel.bash

# Yalnıca bir arayüz2 örneği çalışması için
# pid denetimi yapılsın.
arayuz2_pid_denetle

arayuz2() {
  g_vakitleri_al; g_gun_animsat

yad --title "${AD^}" \
--text="$(g_vakitleri_yaz)\n\n<span foreground=\'${ARAYUZ_SIMDIKI_VAKIT_RENGI}\'>${vakit_bilgisi}${ozel_ileti}</span>\
\n\n<span foreground=\'${ARAYUZ_KALAN_SURE_RENGI}\'>${v_ileti}\n${v_kalan}</span>" \
--image=ezanvakti --window-icon=ezanvakti --mouse --fixed --sticky \
--button='gtk-refresh:172' --button='gtk-close'

case $? in
  172)
    arayuz2
    ;;
esac
}; arayuz2

