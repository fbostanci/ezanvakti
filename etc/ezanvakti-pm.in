#!/bin/bash

function calisiyorsa() {
  if { ps ax | grep -v grep | grep -w "ezanvakti-sleep.bash [1-2]$" &>/dev/null; }
  then
      return 0
  else
      return 1
  fi
}

case $1 in
  suspend|suspend_hybrid|hibernate)
    if calisiyorsa; then pkill ezanvakti-sleep.bash; fi ;;
  resume|thaw)
    :    ;;
esac
