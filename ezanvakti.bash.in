#set -n
#set -x

[[ $1 = --@(gui|aray[uü]z)   ]] && exec @libdir@/ezanvakti/arayuz.bash
[[ $1 = --@(gui2|aray[uü]z2) ]] && exec @libdir@/ezanvakti/arayuz2.bash

. @libdir@/ezanvakti/temel_islevler.bash

case $1 in
  -v|--v|--vakitler)
    bilesen_yukle vakitler; shift
    case $1 in
      -s|--sabah) vakitleri_goster sabah ;;
      -[oö]|--[oö][gğ]le) vakitleri_goster ogle ;;
      -i|--ikindi) vakitleri_goster ikindi ;;
      -a|--ak[sş]am) vakitleri_goster aksam ;;
      -y|--yats[ıi]) vakitleri_goster yatsi ;;
      7|--haftal[ıi]k) vakitleri_goster haftalik ;;
      30|--ayl[ıi]k) vakitleri_goster aylik ;;
      --osd|--bildirim) vakitleri_goster bildirim ;;
      '') vakitleri_goster tum_vakitler ;;
      ?*) hatali_kullanim $1;;
    esac ;;
  -vs|--vs) bilesen_yukle vakitler; vakitleri_goster sabah ;;
  -v[oö]|--v[oö]) bilesen_yukle vakitler; vakitleri_goster ogle ;;
  -vi|--vi) bilesen_yukle vakitler; vakitleri_goster ikindi ;;
  -va|--va) bilesen_yukle vakitler; vakitleri_goster aksam ;;
  -vy|--vy) bilesen_yukle vakitler; vakitleri_goster yatsi ;;
  -v7|--v7) bilesen_yukle vakitler; vakitleri_goster haftalik ;;
  -v30|--v30) bilesen_yukle vakitler; vakitleri_goster aylik ;;
  -vb|--vb) bilesen_yukle vakitler; vakitleri_goster bildirim ;;
  --dinle) bilesen_yukle ezan_dinlet; shift
    case $1 in
      -s|--sabah) ezan_dinlet Sabah "${SABAH_EZANI}" ;;
      -o|--[oö][gğ]le) ezan_dinlet Öğle "${OGLE_EZANI}" ;;
      -i|--ikindi) ezan_dinlet İkindi  "${IKINDI_EZANI}" ;;
      -a|--ak[sş]am) ezan_dinlet Akşam "${AKSAM_EZANI}" ;;
      -y|--yats[ıi]) ezan_dinlet Yatsı "${YATSI_EZANI}" ;;
      *) hatali_kullanim ${1:-null} ;;
    esac ;;
  --kuran) bilesen_yukle kuran_dinletici; shift
    case $1 in
      -r|--rastgele) kuran_dinlet rastgele ;;
      -h|--hatim) kuran_dinlet hatim ;;
      -g|--g[uü]nl[uü]k) kuran_dinlet gunluk ;;
      -s|--se[cç]im) kuran_dinlet secim $2 ;;
      *) hatali_kullanim ${1:-null} ;;
    esac ;;
  -kr|--kr) bilesen_yukle kuran_dinletici; kuran_dinlet rastgele ;;
  -kh|--kh) bilesen_yukle kuran_dinletici; kuran_dinlet hatim ;; 
  -kg|--kg) bilesen_yukle kuran_dinletici; kuran_dinlet gunluk ;;
  -ks|--ks) bilesen_yukle kuran_dinletici; kuran_dinlet secim $2 ;;
  --sureler) bilesen_yukle sureler_ayetler; sureler_ayetler ;;
  --ayet) bilesen_yukle ayet_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) ayet_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') ayet_goster bildirim ;;
    esac ;;
  --ramazan) yontem_calistir ramazan ;;
  --conky) bilesen_yukle conky; ezv_conky ;;
  --iftar) bilesen_yukle iftar; ezv_iftar ;;
  --conky-iftar) bilesen_yukle conky-iftar; ezv_conky_iftar ;;
  --hadis) bilesen_yukle hadis_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) hadis_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') hadis_goster bildirim ;;
    esac ;;
  --bilgi) bilesen_yukle bilgi_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) bilgi_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') bilgi_goster bildirim ;;
    esac ;;
  --esma) bilesen_yukle esma; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) esma ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') esma bildirim ;;
    esac ;;
  --g[uü]ncelle) bilesen_yukle guncelleyici; guncelleme_yap ;;
  --g[uü]nler) bilesen_yukle dini_gunler; gunler ;;
  -V|--s[uü]r[uü]m|--version) surum_goster ;;
  -h|--help|--yard[iı]m) betik_kullanimi ;;
  ?*) hatali_kullanim $1 ;;
  '') yontem_calistir ;;
esac

