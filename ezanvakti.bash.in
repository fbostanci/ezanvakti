#set -n
#set -x


[[ $1 = --@(gui|aray[uü]z)   ]] && exec @libdir@/@AD@/arayuz.bash
[[ $1 = --@(gui2|aray[uü]z2) ]] && exec @libdir@/@AD@/arayuz2.bash
[[ $1 = --ramazan            ]] && exec @libdir@/@AD@/ezanvakti-sleep.bash 2
[[ $1 = ""                   ]] && exec @libdir@/@AD@/ezanvakti-sleep.bash 1

. @libdir@/@AD@/temel_islevler.bash

case $1 in
  -v|--v|--vakitler)
    bilesen_yukle vakitleri_goster; shift
    case $1 in
      -s|--sabah) vakitler sabah ;;
      -[oö]|--[oö][gğ]le) vakitler ogle ;;
      -i|--ikindi) vakitler ikindi ;;
      -a|--ak[sş]am) vakitler aksam ;;
      -y|--yats[ıi]) vakitler yatsi ;;
      7|--haftal[ıi]k) vakitler haftalik ;;
      30|--ayl[ıi]k) vakitler aylik ;;
      --osd|--bildirim) vakitler bildirim ;;
      '') vakitler tum_vakitler ;;
      ?*) hatali_kullanim $1;;
    esac ;;
  -vs|--vs) bilesen_yukle vakitleri_goster
            vakitler sabah ;;
  -v[oö]|--v[oö]) bilesen_yukle vakitleri_goster
                  vakitler ogle ;;
  -vi|--vi) bilesen_yukle vakitleri_goster
            vakitler ikindi ;;
  -va|--va) bilesen_yukle vakitleri_goster
            vakitler aksam ;;
  -vy|--vy) bilesen_yukle vakitleri_goster
            vakitler yatsi ;;
  -v7|--v7) bilesen_yukle vakitleri_goster
            vakitler haftalik ;;
  -v30|--v30) bilesen_yukle vakitleri_goster
            vakitler aylik ;;
  -vb|--vb) bilesen_yukle vakitleri_goster
            vakitler bildirim ;;
  --dinle) bilesen_yukle ezan_dinlet; shift
    case $1 in
      -s|--sabah) ezan_dinlet Sabah "${SABAH_EZANI}" ;;
      -o|--[oö][gğ]le) ezan_dinlet Öğle "${OGLE_EZANI}" ;;
      -i|--ikindi) ezan_dinlet İkindi  "${IKINDI_EZANI}" ;;
      -a|--ak[sş]am) ezan_dinlet Akşam "${AKSAM_EZANI}" ;;
      -y|--yats[ıi]) ezan_dinlet Yatsı "${YATSI_EZANI}" ;;
      *) hatali_kullanim ${1:-null} ;;
    esac ;;
  --kuran) bilesen_yukle kuran_dinletici; shift
    case $1 in
      -r|--rastgele) kuran_dinlet rastgele ;;
      -h|--hatim) kuran_dinlet hatim ;;
      -g|--g[uü]nl[uü]k) kuran_dinlet gunluk ;;
      -s|--se[cç]im) kuran_dinlet secim $2 ;;
      *) hatali_kullanim ${1:-null} ;;
    esac ;;
  -kr|--kr) bilesen_yukle kuran_dinletici
            kuran_dinlet rastgele ;;
  -kh|--kh) bilesen_yukle kuran_dinletici
            kuran_dinlet hatim ;; 
  -kg|--kg) bilesen_yukle kuran_dinletici
            kuran_dinlet gunluk ;;
  -ks|--ks) bilesen_yukle kuran_dinletici
            kuran_dinlet secim $2 ;;
  --sureler) bilesen_yukle sureler_ayetler
             sureler_ayetler ;;
  --ayet) bilesen_yukle ayet_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) ayet_goster ucbirim ;;
      -a|--aral[ıi]k) ayet_goster aralik $2 $3 ;;
      ?*) hatali_kullanim $1 ;;
      '') ayet_goster bildirim ;;
    esac ;;
  --aa|-aa) bilesen_yukle ayet_goster; shift
            ayet_goster aralik $1 $2 ;;
  --conky) bilesen_yukle conky
           ezv_conky ;;
  --iftar) bilesen_yukle iftar
           ezv_iftar ;;
  --conky-iftar) bilesen_yukle conky
                 ezv_conky_iftar ;;
  --hadis) bilesen_yukle bilgi_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) hadis_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') hadis_goster bildirim ;;
    esac ;;
  --bilgi) bilesen_yukle bilgi_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) bilgi_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
      '') bilgi_goster bildirim ;;
    esac ;;
  --esma) bilesen_yukle bilgi_goster; shift
    case $1 in
      -u|-t|--u[cç]birim|--terminal) esma_goster ucbirim ;;
      ?*) hatali_kullanim $1 ;;
    esac ;;
  --g[uü]ncelle) bilesen_yukle guncelleyici
                 guncelleme_yap ;;
  --g[uü]nler) bilesen_yukle dini_gunler
               gunler ;;
#  --s[ıi]f[ıi]rla) bilesen_yukle ayarlari_sifirla; ayarlari_sifirla ;;
  --renk|--renk-[öo][gğ]ren) bilesen_yukle renk_ogren
                             renk_ogren ;;
  --config|--yap[ıi]land[ıi]rma) ${EDITOR:-${nano:-vim}} "${EZANVAKTI_AYAR}" ;;
  --kalan) bilesen_yukle kalan
           kalan_sure ;;
  -V|--s[uü]r[uü]m|--version) surum_goster ;;
  -h|--help|--yard[iı]m) bilesen_yukle kullanim
                         betik_kullanimi ;;
  ?*) hatali_kullanim $1 ;;
esac

